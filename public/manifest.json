{
  "manifest_version": 3,
  "name": "Amazon Prime Price Checker",
  "description": "Google extension that alerts you if the price for the product you're browsing is different for non-prime users",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "24": "images/icon.png",
      "32": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "nativeMessaging",
    "tabs"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}